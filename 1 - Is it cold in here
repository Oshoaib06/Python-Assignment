temperature = int(input("Enter the temperature you would like to convert: "))
mode = int(input("\n Mode 1 to convert from C to F and 2 to convert from F to C: "))


if mode == 1:
  temperature = temperature * (9/5) + 32
  print(f"The temperature is {temperature} degrees fehrenheit")
elif mode == 2:
  temperature = (temperature - 32) * (5/9)
  print(f"The temperature is {temperature} degrees celsius")

